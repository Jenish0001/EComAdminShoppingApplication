<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@drawable/border"
        >

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addAddressTxt"
                android:fontFamily="serif"
                android:text="Change Address"
                android:textColor="@color/black"
                android:textSize="20dp"

                />


            <TextView
                android:id="@+id/addressNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressTxt"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text=" Address Name"
                android:textColor="@color/black"
                android:textSize="15dp"

                />


            <TextView
                android:id="@+id/addAddressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Add Address"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/updateAddAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressNameTxt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:fontFamily="serif"
                android:text="+ Add Address"
                android:textColor="@color/teal_700"
                android:textSize="18dp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/idBtnDismiss"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cross"
            android:textAllCaps="false" />


    </RelativeLayout>

</RelativeLayout>